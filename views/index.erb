<% content_for :stylesheets do %>
  <link rel="stylesheet" type="text/css" href="/css/index.css"/>
<% end %>
<div id="edit">
  <a href="/edit">¡Edit the newslinks!</a>
</div>

<p id="title">¡Newslinks!</p>

<% @category_id_to_links.each do |category_id, links| %>
<div class="category">
  <p><%= @category_id_to_name[category_id.to_i] %></p>
    <% links.each do |link| %>
      <div class="link">
      <div><%= link[0] %>: <a href="<%= link[3] %>"><%= link[1] %></a></div>
      <p class="description"><%= link[2] %></p>
      </div>
    <% end %>
</div>
<% end %>
  
  

